import tkinter as tk
from tkinter import messagebox
import sqlite3  
root = tk.Tk()
root.title("WEEK 6.DB")
tk.Label(root, text="Name :").grid(row=0, column=0)
name_entry = tk.Entry(root)
name_entry.grid(row=0, column=1)
tk.Label(root, text="Gender :").grid(row=3, column=0)
gender_entry = tk.Entry(root)
gender_entry.grid(row=3, column=1)
tk.Label(root, text="Age :").grid(row=5, column=0)
age_entry = tk.Entry(root)
age_entry.grid(row=5, column=1)
tk.Label(root, text="Mobile Number :").grid(row=10, column=0)
phone_entry = tk.Entry(root)
phone_entry.grid(row=10, column=1)
tk.Label(root, text="Email :").grid(row=15, column=0)
email_entry = tk.Entry(root)
email_entry.grid(row=15, column=1)
def store_data():
    name = name_entry.get()
    gender = gender_entry.get()
    age = age_entry.get()
    email = email_entry.get()
    phone = phone_entry.get()
    conn = sqlite3.connect("data.db")
    c = conn.cursor()
    c.execute("""CREATE TABLE IF NOT EXISTS users (name TEXT,gender TEXT,age INTEGER,phone INTEGER,email TEXT)""")
    c.execute("INSERT INTO users VALUES (?, ?, ?, ?, ?)", (name, gender, age, phone, email))
    conn.commit()
    conn.close()
    messagebox.showinfo("Done", "informtion entered successfully.")
store_button = tk.Button(root, text="Save data", command=store_data)
store_button.grid(row=25, column=1)
def show_data():
    conn = sqlite3.connect("data.db")
    c = conn.cursor()
    c.execute("SELECT * FROM users")
    data = c.fetchall()
    conn.close()
    messagebox.showinfo("Data", data)
show_button = tk.Button(root, text="Show data", command=show_data)
show_button.grid(row=20, column=1)

root.mainloop()
